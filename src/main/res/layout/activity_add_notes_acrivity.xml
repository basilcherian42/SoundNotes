<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNotesActivity"
    android:orientation="vertical"
    android:background="@color/dark1"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/back" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:background="@color/orange"
            android:textOn="transcribe on"
            android:textOff="transcribe off" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton1"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/subject_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Title"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/dark2"
        android:textSize="22sp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/description_edittext"
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Enter Description"
        android:minLines="5"
        android:textAlignment="inherit"
        android:textColor="@color/lgray"

        android:textColorHint="@color/dark2"></EditText>

    <Button
        android:id="@+id/add_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gray"
        android:backgroundTint="@color/orange"
        android:text="Save"
        android:textColor="@color/dark1"
        android:textColorHint="@color/white"
        android:textStyle="bold" />



</LinearLayout>